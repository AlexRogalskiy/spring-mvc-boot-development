<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <bean id="repository" class="com.acme.dbo.dao.MapBackedAccountRepository">
        <constructor-arg value="${accounts.repo.init-capacity}" />
    </bean>

    <bean id="service" class="com.acme.dbo.service.AccountService">
        <constructor-arg ref="repository" />
    </bean>

    <bean class="com.acme.dbo.controller.AccountController">
        <constructor-arg ref="service" />
    </bean>

</beans>